<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PBOCobrand.Activity.InitialLoadingActivity"
    tools:showIn="@layout/activity_initial_loading"
    android:background="#F7F7F7"
    >

    <ImageView
        android:layout_width="@dimen/width_off"
        android:layout_height="@dimen/height_off"
        android:id="@+id/ivPlayOverlay"
        android:adjustViewBounds="false"
        android:background="@drawable/offline_pages"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:layout_below="@+id/ivPlayOverlay"
        android:id="@+id/refresh"
        android:layout_width="@dimen/width_refresh"
        android:layout_height="@dimen/height_refresh"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/refresh_button"
        android:clickable="true"
        android:foreground="@drawable/effect"/>
    <!--<ProgressBar
        android:id="@+id/progressbar"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:layout_below="@+id/refresh"
        android:indeterminate="true"
        android:foreground="?android:attr/progressBarStyleLarge"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />-->


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:layout_below="@+id/refresh"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>
