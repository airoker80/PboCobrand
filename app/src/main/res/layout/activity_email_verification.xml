<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_6sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/_14sdp"
                android:textColor="#9da3a5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="EMAIL VERIFICATION"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="@dimen/_16sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Welcome To paybyonline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="@dimen/_6sdp"
                    android:src="@drawable/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Hello sameer manandhar"/>
            <TextView
                android:layout_marginTop="@dimen/_6sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Verifying your paybyonline account helps make paybyonline even safer for everyone. When you’re verified, it means that you’ve provided a little more information about yourself to help confirm your identity. Please verify your account by clicking on button below."/>

            <Button
                android:layout_marginTop="@dimen/_6sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:padding="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/shape_email_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify your Account"/>
            <TextView
                android:layout_marginTop="@dimen/_6sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="We have sent you an email with verification link.If the account does not exist please click the Update button to update valid email-address. "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Please "/>
                <TextView
                    android:textColor="#1b75b6"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text=" Update "/>

            </LinearLayout>
            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email address:"
                android:textColor="#000000"/>
            <EditText
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:textSize="@dimen/_16sdp"
                android:background="@drawable/shape_edittext_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="@dimen/_6sdp"
                android:textColor="@color/white"
                android:padding="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/shape_email_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="Thanks,"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="paybyonline Team"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="@dimen/_65sdp"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:text="Go to "/>
                <TextView
                    android:layout_marginRight="@dimen/_6sdp"
                    android:textColor="#1b75b6"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:text="dashboard"/>


            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>