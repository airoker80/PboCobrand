<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.paybyonline.Activity.LoginActivity"
    tools:showIn="@layout/activity_login">

<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username or Email"
                style="@style/Customtextview"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/text_size"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Username / Email"
                android:layout_marginLeft="@dimen/space_left"
                android:layout_marginRight="@dimen/space_right"
                style="@style/CustomHintColor"
                android:textCursorDrawable="@drawable/color_cursor"
                android:paddingTop="@dimen/space_top"
                android:textSize="@dimen/font_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                style="@style/Customtextview"
                android:layout_marginLeft="@dimen/margin_left"
                android:paddingTop="@dimen/padding_top"
                android:textSize="@dimen/text_size"
                android:clickable="true"
                android:src="@drawable/ripple_effect"
               />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Password"
                android:layout_marginLeft="@dimen/space_left"
                android:layout_marginRight="@dimen/space_right"
                style="@style/CustomHintColor"
                android:textCursorDrawable="@drawable/color_cursor"
                android:paddingTop="@dimen/space_top"
                android:textSize="@dimen/font_size"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_effect"
                    android:text="LOGIN"
                    style="@style/CustomButton"

                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/size_font"
                    android:paddingRight="15dp"
                    />
                <Button
                    android:id="@+id/forgetPwdBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_effect"
                    android:text="FORGOT PASSWORD"
                    style="@style/CustomButton"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/gap_left"
                    android:textSize="@dimen/size_font"/>
                    <!--android:layout_marginLeft="@dimen/left_margin"-->

            </RelativeLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rechargeCodeBtn"
                android:background="@drawable/ripple_effect"
                android:textColor="#535353"
                android:text="Use Recharge Code"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/size_font"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:textAllCaps="false"
              />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#B7B7B7"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <Button
                android:id="@+id/createActnBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an account"
                style="@style/CustomButton"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/size_font"
                android:layout_marginTop="@dimen/margin_top"
                android:clickable="true"
                android:background="@drawable/effect"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
